Q1;
#include<stdio.h>

int main(){
         int n;
         // Input the positive value of n;
         printf("Enter the value of n:");
         scanf("%d",&n);
         int line=1;
         int i;
         while(line<=n){
	      int i=1;
              while(i<=line){
                  printf("*");
              i=i+1;
	      } //end while i<= line
              printf("\n");
              line=line+1;
	}
        return 1;
}//end main
